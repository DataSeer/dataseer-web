    <h1>Protocols</h1>
    <section>
      <table>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>URL</th>
          <th>Depo to Repo</th>
          <th>Re-Use</th>
        </tr>
        if (reportData.sortedDatasetsInfos.protocols.length === 0)
          <tr>
            <td colspan=5 style="text-align: center;">None</td>
          </tr>
        else
          each item, index in reportData.sortedDatasetsInfos.protocols
            <tr>
              <td>#{index+1}</td>
              <td>#{item.name}</td>
              <td>#{item.doi}</td>
              <td>#{item.doi ? "Yes" : "No"}</td>
              <td>#{item.reuse ? "Yes" : "No"}</td>
            </tr>
      </table>
    </section>

    each dataType in reportData.datasetsSummary
      if (dataType.key !== "other")
        <h1>#{dataType.type.label}</h1>
        <h2>Reference for DS DataType link to Wiki:</h2>
        <section>
          <ul>
            li
              a(href=dataType.type.url) #{dataType.type.label}
            each item in dataType.subTypes
              li
                a(href=item.type.url) #{item.type.label}
        </section>
        <section>
          <table>
            <tr>
              <th>Deposited in a Repo</th>
              <th>Re-Use</th>
              <th>#</th>
              <th>Dataset Name</th>
              <th>Figure Ref</th>
              <th>DS DataType</th>
              <th>Figure Legend Sentence</th>
              <th>Data Sentence from Method</th>
              <th>Dataset Permanent Link</th>
            </tr>
            each item, index in dataType.list
              <tr>
                <td style="text-align: center;"><input type="checkbox"></td>
                <td>#{item.reuse ? "Yes" : "No"}</td>
                <td>#{index+1}</td>
                <td>#{item.name}</td>
                <td></td>
                <td>
                  a(href=item.type.url) #{item.type.label}
                </td>
                <td></td>
                <td>
                  each sentence in item.sentences
                   p #{sentence.text}
                </td>
                <td>#{item.DOI}</td>
              </tr>
          </table>
        </section>

