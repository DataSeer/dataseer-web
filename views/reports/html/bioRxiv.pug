  <body>
    <h1>Data Discovery/Status Report</h1>
    <section>
      div.property
        div.key Article Title:
        div.value #{reportData.doc.metadata.article_title}
      div.property
        div.key DOI:
        div.value #{reportData.doc.metadata.doi}
      div.property
        div.key Authors:
        div.value #{reportData.doc.metadata.authors.filter((item)=>!!item.name).map((item)=>item.name).join(",")}
      div.property
        div.key Preprint Link:
        div.value unknow
      div.property
        div.key DataSeer Link:
        div.value #{reportData.doc.pdf.filename}
    </section>
    <section>
        div.subtitle Summary List of datasets associated with article:
        <ul>
            each item in [{"key":"protocols","label": "Protocols"},{"key":"datasets","label": "Datasets"},{"key":"codes","label": "Codes"},{"key":"reagents","label": "Reagents/Materials/Lab Resources"}]
              li #{`${reportData.sortedDatasetsInfos[item.key].length} ${item.label}`}
                if (item.key === "datasets")
                  each dataType in reportData.datasetsSummary
                    if(dataType.key !== "other")
                      ul
                        li #{dataType.count} #{dataType.type.label}
                          ul
                            if (dataType.subTypes && dataType.subTypes.length)
                              each subtype in dataType.subTypes
                                li #{subtype.count} #{subtype.type.label.replace(`${dataType.type.label}: `, '')}
        </ul>
        div.property
          div.key #{`Total datasets in DataSeer ${reportData.doc.datasets.__v}th (${formatDate(new Date())}) Version of Report:`}
          div.value #{reportData.sortedDatasetsInfos.all.length}
    </section>
