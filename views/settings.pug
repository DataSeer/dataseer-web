extends layout

block content

  div(class='container-fluid')
    div(class='row')
      div(class='col-12' style='background-color:#FFFFFF; border:1px solid #184D7E; border-radius: 20px; ')
        div(class='row' style='margin-top:20px;')
          div(class='col-12' style='margin:auto;')
            <table style='text-align: center; margin:auto;'>
              <tr>
                <td style='padding-right: 40px;'><b>Username</b>: #{current_user.username} </td>
                <td style='padding-right: 20px;'><b>Role</b>:  #{current_user.role.label} </td>
                <td style='padding-left: 20px;'><b>Organization</b>: #{current_user.organisation}</td>
                <td style='padding-left: 20px;'><b>token</b>: <button id="copyApiToken" class="button blue btn btn-sm btn-primary waves-effect waves-light" title=#{current_user.apiToken}>Copy to clipboard</button></td>
              </tr>
            </table>
            input.form-control.hidden(type='text' id='apiToken' name='apiToken' value=current_user.apiToken)
          div(class='col-12' style='text-align: center;top: 20px;')
            h2 Update password
        div(class='row')
          div(class='col-12')
            form(role='form', action=root + route, method='post', style='max-width: 300px; margin: auto; text-align: center; margin-top:20px; margin-bottom:20px;')
              if error
                div(class='alert alert-warning' role='alert') #{error}
              if success
                div(class='alert alert-success' role='alert') #{success}
              .form-group
                input.form-control(type='password', name='current_password', placeholder='current password')
              .form-group
                input.form-control(type='password', name='new_password', placeholder='new password')
              .btn-group
                button.blue.btn.btn-primary.waves-effect.waves-light(type='submit') update password

  script(src=root + 'javascripts/settings.js')