extends layout

block content

  div(class='container-fluid')
    div(class='row')
      div(class='col-12')
        h2 Update password
    div(class='row')
      div(class='col-12')
        form(role='form', action='/settings',method='post', style='max-width: 300px;')
          if error
            div(class='alert alert-warning' role='alert') #{error}
          if success
            div(class='alert alert-success' role='alert') #{success}
          .form-group
            input.form-control(type='password', name='current_password', placeholder='current password')
          .form-group
            input.form-control(type='password', name='new_password', placeholder='new password')
          .btn-group
            button.blue.btn.btn-default.waves-effect.waves-light(type='submit') update password
